namespace ning

structure Person {
	// structure definitions can be nested. They inherit the enclosing namespace: users.Person.PhoneNumber
	structure PhoneNumber {

		// enums can be nested. They inherit the enclosng namespace: users.Person.PhoneNumber.PhoneType 
		enum PhoneType {
			MOBILE = 0,
			HOME = 1,
			WORK = 2
		}

		1: phone string,
		2: type PhoneType (default = HOME)
	}

	1: name string,
	2: password_hash bytes,
	3: phones list<PhoneNumber>,
	4: age integer (min = 0, max = 150),     // serializer knows it can encode in a single byte, unsigned
	5: height decimal
}